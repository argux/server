<div class="section-body">
    <div tal:condition="len(hosts) == 0"
         class="alert alert-danger">
        <strong>Warning:</strong> No hosts configured, unable to configure monitors.
    </div>
    <div class="panel panel-default">
        <div class="panel-heading">Monitors
            <div class="pull-right">
                <button tal:condition="len(hosts) > 0"
                        type="button"
                        class="btn btn-default btn-xs"
                        data-target="#create-monitor-modal"
                        data-toggle="modal">
                    <span class="glyphicon glyphicon-plus alert-default"></span>
                </button>
            </div>
        </div>
        <table class="table table-striped">
            <thead>
            <th>Host</th>
            <th>Response-Time</th>
            <th>Last Check</th>
            <th>Interval</th>
            <th>Enabled</th>
            <th></th>
            </thead>
            <tbody id='monitors'>
            <tr>
            </tr>
            </tbody>
        </table>
    </div>
</div>
<div class="modal fade"
     tabindex="-1"
     role="dialog"
     aria-labelledby="myLargeModalLabel"
     id="create-monitor-modal">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">

            <!-- Add Trigger -->
            <form id="monitor-form" action="">
            <div class="modal-header">
                <button type="button"
                        class="close"
                        data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Add DNS Monitor<h4>
            </div>
            <div class="modal-body">
                <div role="tabpanel" class="tab-pane active" id="edit">
                    <div id="trigger-form-alerts"></div>
                    <label for="monitor-host">Host</label>
                    <select class="form-control" id="monitor-host">
                        <option tal:repeat="host hosts"
                                tal:content="host.name">
                        </option>
                    </select>
                    <label for="monitor-address">Address</label>
                    <select class="form-control" id="monitor-address">
                    </select>
                    <label for="monitor-address">Domain</label>
                    <div class="input-group" id='monitor-domain'>
                      <input type="text" class="form-control" aria-label="...">
                      <div class="input-group-btn">
                        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><span class="glyphicon glyphicon-pencil"></span></button>
                        <ul class="dropdown-menu dropdown-menu-right">
                          <!--<li><a href="#"></a></li>-->
                        </ul>
                      </div><!-- /btn-group -->
                    </div><!-- /input-group -->
                    <div class="input-group">
                    <label for="monitor-domain-A"><input type="checkbox"/> A record</label>
                    </div>
                    <div class="input-group">
                    <label for="monitor-domain-AAAA"><input type="checkbox"/> AAAA record</label>
                    </div>
                    <div class="input-group">
                    <label for="monitor-domain-MX"><input type="checkbox"/> MX record</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Add Monitor</button>
            </div>
            </form>
        </div>
    </div>
</div>
