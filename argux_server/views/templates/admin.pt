<!DOCTYPE html>
<html lang="${request.locale_name}"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Argux Server monitoring application">
    <link rel="shortcut icon" href="${request.static_url('argux_server:static/pyramid-16x16.png')}">

    <title>Argux</title>

    <!-- Bootstrap core CSS -->
    <link href="${request.static_url('argux_server:static/css/bootstrap.min.css')}" rel="stylesheet">

    <link href="${request.static_url('argux_server:static/theme.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript">
        var ARGUX_BASE="${request.application_url}";
        var CSRF_TOKEN="${request.session.get_csrf_token()}";
    </script>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="${request.route_url('home')}">
                <span class="glyphicon glyphicon-menu-left"></span>
                </a>
            </div>
            <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="${request.route_url('admin')}">Admin</a></li>
                    <li><a href="${request.route_url('logout')}">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="body container-fluid">
        <div class="page-header">
            <h2>Administration</h2>
        </div>
        <ul class="nav nav-tabs nav-xs">
          <li tal:define="item_l ('Users', 'Hosts')"
              tal:repeat="item ('users', 'hosts')"
              tal:attributes="class 'active' if item==action else nothing">
            <a tal:attributes="href request.application_url+'/admin/'+item">
                <span tal:content="item_l[repeat.item.index]">
            </a>
            <span tal:condition="action==item">
                <span tal:define="global tmpl load: ./admin/${item}.pt"/>
            </span>
          </li>
        </ul>
        <div metal:extend-macro='tmpl'></div>
    </div>
    <footer class="footer">
        <div class="container-fluid">
        <p class="text-muted">${userid}</p>
        </div>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="${request.static_url('argux_server:static/js/jquery.min.js')}"></script>
    <script src="${request.static_url('argux_server:static/js/bootstrap.min.js')}"></script>
    <script src="${request.static_url('argux_server:static/js/moment.min.js')}"></script>
    <script src="${request.static_url('argux_server:static/argux.js')}"></script>
    <script src="${request.static_url('argux_server:static/host.js')}"></script>
  </body>
</html>

