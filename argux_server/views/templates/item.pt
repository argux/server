<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Argux Server monitoring application">
    <link rel="shortcut icon" href="${request.static_url('argux_server:static/pyramid-16x16.png')}">

    <title>Argux</title>

    <!-- Bootstrap core CSS -->
   <link href="${request.static_url('argux_server:static/css/bootstrap.min.css')}" rel="stylesheet">
   <link href="${request.static_url('argux_server:static/css/bootstrap-datetimepicker.min.css')}" rel="stylesheet">

    <!-- Custom styles for this scaffold -->
    <link href="${request.static_url('argux_server:static/theme.css')}" rel="stylesheet">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="//oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="//oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
    <script type="text/javascript">
        var ARGUX_BASE="${request.application_url}";
        var ARGUX_HOST="${argux_host}";
        var ARGUX_ITEM="${argux_item.key}";
        var ARGUX_ITEM_ACTION="${action}";
        var TIMESPAN="${timespan}";
        var CSRF_TOKEN="${request.session.get_csrf_token()}";
        var FULLSCREEN="${fs}";
    </script>
  </head>

  <body tal:attributes="class 'fs' if fs==True else nothing">
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <button class="navbar-toggle collapsed" aria-controls="navbar" aria-expanded="false" data-target="#navbar" data-toggle="collapse" type="button">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="${request.route_url('home')}">Argux</a>
            </div>
            <div id="navbar" class="navbar-collapse collapse" aria-expanded="false" style="height: 1px;">
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="${request.route_url('admin')}">Admin</a></li>
                    <li><a href="${request.route_url('logout')}">Logout</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="body container-fluid">
        <ol class="breadcrumb">
          <li class="dropdown"><a href="/hosts">Hosts</a>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="caret"/>
            </a>
            <ul class="dropdown-menu">
              <li><a href="${request.route_url('monitor_default')}">Monitors</a></li>
              <li><a href="${request.route_url('dashboards')}">Dashboards</a></li>
            </ul>
          </li>
          <li><a href="${request.application_url}/host/${argux_host}">${argux_host}</a></li>
          <li class="active">${argux_item.name}</li>
        </ol>
        <div class="page-header">
            <div class="pull-right">
                <button type="button"
                        id="toggle-fullscreen"
                        class="btn btn-default btn-sm">
                    <span tal:attributes="class 'glyphicon glyphicon-resize-small' if fs==True else 'glyphicon glyphicon-fullscreen'">
                    </span>
                </button>
            </div>
            <h1>
                <a href="${request.application_url}/host/${argux_host}">${argux_host}</a>
                <small>${argux_item.name}</small>
            </h1>
        </div>
        <ul class="nav nav-tabs nav-xs">
          <li tal:define="item_l ('Details', 'Alerts', 'Triggers')"
              tal:repeat="item ('details', 'alerts','triggers')"
              tal:attributes="class 'active' if item==action else nothing">
            <a tal:attributes="href request.application_url+'/host/'+argux_host+'/item/'+argux_item.key+'/'+item">
                <span tal:content="item_l[repeat.item.index]"></span>
                <span tal:condition="item=='alerts'"
                      class="badge" id="alert_count"></span>
            </a>
            <span tal:condition="action==item">
                <span tal:define="global tmpl load: ./item/${item}.pt"/>
            </span>
          </li>
        </ul>
        <div metal:extend-macro='tmpl'></div>
    </div>
    <footer class="footer">
        <nav class="navbar navbar-default navbar-fixed-bottom">
          <div class="container-fluid">
            <ul class="nav navbar-nav">
                <li><a href="${request.route_url('profile')}">Logged in as ${userid}</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a target="_blank" href="https://argux-server.readthedocs.org">Docs</a></li>
            </ul>
          </div>
        </nav>
    </footer>

    <!-- Bootstrap core JavaScript
    ================================================== -->
    <!-- Placed at the end of the document so the pages load faster -->
    <script src="${request.static_url('argux_server:static/js/jquery.min.js')}"></script>
    <script src="${request.static_url('argux_server:static/js/bootstrap.min.js')}"></script>
    <script src="${request.static_url('argux_server:static/js/moment.min.js')}"></script>
    <script src="${request.static_url('argux_server:static/js/color.min.js')}"></script>
    <script src="${request.static_url('argux_server:static/js/Chart.min.js')}"></script>
    <script src="${request.static_url('argux_server:static/js/bootstrap-datetimepicker.min.js')}"></script>
    <script src="${request.static_url('argux_server:static/argux.js')}"></script>
    <script src="${request.static_url('argux_server:static/item.js')}"></script>
  </body>
</html>
