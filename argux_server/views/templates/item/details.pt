<div class="section-body">
    <div tal:condition="has_details==True"
         class="col-md-6">
        <div id="item-details">
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default" id="timechart">
            <div class="panel-heading">Timechart</div>
            <div class="panel-body">
                <div class="btn-toolbar pull-right">
                    <!-- Split button -->
                    <div class="btn-group">
                      <a tal:attributes="class 'btn btn-sm btn-primary' if timespan=='24h' else 'btn btn-sm btn-default'"
                         href="?timespan=24h&#timechart"
                         type="button"
                         role="button"
                         class="btn btn-default btn-sm">24 hours</a>
                      <button type="button"
                              class="btn btn-default dropdown-toggle btn-sm"
                              data-toggle="dropdown"
                              aria-haspopup="true"
                              aria-expanded="false">
                        <span class="caret"></span>
                        <span class="sr-only">Toggle Dropdown</span>
                      </button>
                      <ul class="dropdown-menu">
                        <li>
                            <a tal:attributes="class 'btn-primary' if timespan=='7d' else 'btn-default'"
                              href="?timespan=7d&#timechart">1 Week</a>
                        </li>
                        <li>
                            <a tal:attributes="class 'btn-primary' if timespan=='1M' else 'btn-default'"
                               href="?timespan=1M&#timechart">1 Month</a></li>
                        <li role="separator" class="divider"></li>
                        <li>
                            <a tal:attributes="class 'btn-primary' if timespan=='all' else 'btn-default'"
                               href="?timespan=all&#timechart">All time</a></li>
                      </ul>
                    </div>
                    <a tal:attributes="class 'btn btn-sm btn-primary' if timespan=='12h' else 'btn btn-sm btn-default'"
                       href="?timespan=12h&#timechart"
                       type="button"
                       role="button"
                       class="btn btn-sm">12 hours</a>
                    <a tal:attributes="class 'btn btn-sm btn-primary' if timespan=='30m' else 'btn btn-sm btn-default'"
                       href="?timespan=30m&#timechart"
                       type="button"
                       role="button"
                       class="btn btn-default btn-sm">30 minutes (realtime)</a>
                </div>
                <div style="padding-top: 10px;">
                    <canvas id="item-timechart" class="item-timechart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
