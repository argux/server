<div class="section-body">
    <div class="col-xs-12 col-sm-4 col-md-3">
    <canvas id="overview"></canvas>
    </div>
    <div class="col-xs-12 col-sm-8 col-md-9 pull-right">
    <div class="panel panel-default" id="timechart">
        <div class="panel-heading">
            Hosts
            <div class="pull-right">
                <button type="button"
                        class="btn btn-default btn-xs"
                        data-target="#create-host-modal"
                        data-toggle="modal">
                    <span class="glyphicon glyphicon-plus alert-default"></span>
                </button>
            </div>
        </div>
        <table class="table table-striped">
        <thead>
        <th>Hostname</th>
        <th>Items</th>
        <th>Alerts</th>
        </thead>
        <tbody id='hosts'>
        </tbody>
        </table>
    </div>
    </div>
    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="createHostLabel" id="create-host-modal">
        <div class="modal-dialog modal-md">
            <div class="modal-content">

                <!-- Add Host -->
                <form id="host-form" action="">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">New host<strong></h4>
                </div>
                <div class="modal-body">
                    <div role="tabpanel" class="tab-pane active" id="edit">
                        <div id="trigger-form-alerts"></div>
                        <label for="host-name">Name</label>
                        <input type="text" class="form-control" id="host-name"/>
                        <label for="host-description">Description</label>
                        <input type="text" class="form-control" id="host-description"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add Host</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
