<div class="section-body">
    <div class="col-md-6">
        <div tal:condition="len(item_details) > 0"
             class="panel panel-default">
        <div class="panel-heading">Details</div>
        <table class="table table-striped panel-body">
        <thead>
            <tr>
                <td>Name</td>
                <td>Timestamp</td>
                <td>Value</td>
            </tr>
        </thead>
        <tbody>
            <tr tal:repeat="detail item_details">
                <td tal:content="detail.name"></td>
                <td tal:content="detail.ts"></td>
                <td tal:content="detail.value"></td>
            </tr>
        </tbody>
        </table>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default" id="timechart">
            <div class="panel-heading">Timechart</div>
            <div class="panel-body">
                <ul class="nav nav-pills pull-right" aria-label="">
                    <li role="presentation"><a href="#timechart">1 week</a></li>
                    <li role="presentation"><a href="#timechart">24 hours</a></li>
                    <li role="presentation" class="active"><a href="#timechart">30 minutes (realtime)</a></li>
                </ul>
                <div>
                    <canvas id="item-timechart" class="item-timechart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>
