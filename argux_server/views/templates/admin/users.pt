<div class="section-body">
    <div class="panel panel-default">
        <div class="panel-heading">
            Users
            <div class="pull-right">
                <button type="button"
                        class="btn btn-default btn-xs"
                        data-target="#create-user-modal"
                        data-toggle="modal">
                    <span class="glyphicon glyphicon-plus alert-default"></span>
                </button>
            </div>
        </div>
        <div class="panel-body">
        ...
        </div>
        <table class="table table-condensed">
        <thead>
        <tr>
            <th>Username</th><th>Locked</th>
        </tr>
        </thead>
        <tbody id="users">
        </tbody>
        </table>
    </div>
    <!-- -->
    <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="createHostLabel" id="create-user-modal">
        <div class="modal-dialog modal-md">
            <div class="modal-content">

                <!-- Add User -->
                <form id="new-user-form" action="" autocomplete="nope" method="POST">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">New User<strong></h4>
                </div>
                <div class="modal-body">
                    <div role="tabpanel" class="tab-pane active" id="edit">
                        <div class="modal-form-alerts"></div>
                        <label for="new-username">Username</label>
                        <input type="text" class="form-control username" id="new-username" autocomplete="nope"/>
                        <label for="new-pass">Password</label>
                        <input type="password" class="form-control" id="new-pass" autocomplete="nope"/>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Create user</button>
                </div>
                </form>
            </div>
        </div>
    </div>
</div>
